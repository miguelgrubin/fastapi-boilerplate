# =============================================================================
# FastAPI Boilerplate Environment Variables
# =============================================================================
# Copy this file to .env and customize for your environment

# =============================================================================
# Application Settings
# =============================================================================

# Database connection string
DATABASE_URL=postgresql://fastapi:fastapi_password@localhost:5432/fastapi_db

# Redis connection string
REDIS_URL=redis://localhost:6379

# =============================================================================
# Docker Compose Settings (see .env.docker for full configuration)
# =============================================================================

# PostgreSQL
POSTGRES_USER=fastapi
POSTGRES_PASSWORD=fastapi_password
POSTGRES_DB=fastapi_db

# Authelia secrets (generate secure values for production!)
# Generate with: openssl rand -hex 32
AUTHELIA_JWT_SECRET=change_me_to_a_long_random_string
AUTHELIA_SESSION_SECRET=change_me_to_a_long_random_string
AUTHELIA_STORAGE_ENCRYPTION_KEY=change_me_to_a_long_random_string
